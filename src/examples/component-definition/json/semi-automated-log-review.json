    "rules": [
      {
        "name": "NIST Common Controls Audit Record Review, Analysis, and Reporting",
        "uuid": "823ca7d8-0eaf-4485-9526-d63baf8324d8",
        "title": "Ensure Audit Record Review, Analysis, and Reporting",
        "condition": "review logs at specific intervals for specific anomalies in the SIEM system",
        "condition-tests": [
          {
            "uuid": "6db8ee2a-2ca8-4c1e-b4fc-5050051ece26",
            "title": "Log into SIEM and Review Predetermined Queries",
            "description": "Using the provided checklist, NIST OISM will provide you step by step instructions about how to log into the Splunk SIEM service, which indices to search, and which queries to execute.",
            "steps": [
              {
                "uuid": "19d6932c-090a-483c-8ac0-534c975ba233",
                "title": "Access Organizational SIEM",
                "description": "A system administrator must be able to enter the SIEM as an authenticated and authorized user.",
                "props": [
                  {
                    "name": "siem-server",
                    "ns": "https://www.nist.gov/oism/security-procedures",
                    "value": "5c46775c-c89d-49fe-b0a2-d1d20ef7e59a",
                    "class": "argument"
                  },
                  {
                    "name": "policy-document",
                    "ns": "https://www.nist.gov/oism/security-procedures",
                    "value": "#2f78e608-d10d-4986-a3ae-a5cf02741a4d",
                    "class": "policy-cross-reference"
                  }
                ],
                "responsible-roles": [
                  {
                    "role-id": "nist-cloud-aws-system-administrator"
                  }
                ]
              },
              {
                "uuid": "a5b74ddc-192b-4334-af70-1dc700eb22a3",
                "title": "Query Preconfigured Indices and Review Audit Logs for Anamolous Behavior",
                "description": "A system administator, once authenticated and authorized in the SIEM, must be able to perform a query on the relevant index with AWS CloudTrail logs and confirm if 0 or more attempts to authenticate to the organization's AWS accounts have been denied.",
                "props": [
                  {
                    "name": "index",
                    "ns": "https://www.nist.gov/oism/security-procedures",
                    "value": "aws_logins",
                    "class": "argument"
                  },
                  {
                    "name": "query-language",
                    "ns": "https://www.nist.gov/oism/security-procedures",
                    "value": "spl",
                    "class": "argument"
                  },
                  {
                    "name": "query",
                    "ns": "https://www.nist.gov/oism/security-procedures",
                    "value": "sourcetype='aws:cloudtrail' | spath | search errorCode=AccessDenied",
                    "class": "argument"
                  }
                ],
                "links": [
                  {
                    "href": "#2f78e608-d10d-4986-a3ae-a5cf02741a4d",
                    "rel": "dependency"
                  }
                ],
                "responsible-roles": [
                  {
                    "role-id": "nist-cloud-aws-system-administrator"
                  }
                ]
              },
              {
                "uuid": "b1c05502-0197-4d39-b350-40ee1032d1c6",
                "title": "Complete Periodic Audit Log with AWS Denied Login Records for Reporting to OISM",
                "description": "A system administator, once completing their analysis during an authenticated and authorized session in the SIEM, must access the AWS Denied Logins report from the OISM's fileshare system and submit it for review by the agency ITSO's team.",
                "links": [
                  {
                    "href": "#151a06ba-0083-4d96-b7d7-c00ba99d1a77",
                    "rel": "dependency"
                  }
                ],
                "responsible-roles": [
                  {
                    "role-id": "nist-cloud-aws-system-administrator"
                  }
                ]
              },
              {
                "uuid": "b9d742db-e809-46e7-b289-65ddc0f7cad6",
                "title": "ITSO Team's Operation Lead Review Reports",
                "description": "The ITSO has an assigned Operations Loud for AWS cloud environments that read reports from all administrators assigned audit log duty periodically, acknowledge reports, and formally requesting follow up for anomalies via the OISM issue tracker as needed.",
                "responsible-roles": [
                  {
                    "role-id": "nist-itso-senior-cloud-ops-lead"
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
